{
  "$schema": "blazar-manifest.json",
  "name": "blazar-Manifest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "configs": {
      "type": "object",
      "description": "Configurações do Sistema",
      "additionalProperties": false,
      "properties": {
        "force_https": {
          "type": "boolean",
          "description": ""
        },
        "force_www": {
          "type": "integer",
          "description": "",
          "enum": [
            -1,
            0,
            1
          ]
        },
        "max_img_width": {
          "type": "integer",
          "description": ""
        },
        "max_img_height": {
          "type": "integer",
          "description": ""
        },
        "max_upload_filesize": {
          "type": "string",
          "description": ""
        },
        "logs": {
          "type": ["string", "boolean", "object"],
          "default": "/logs",
          "description": "Por padrão salva os logs em JSON no diretório {PROJECT_ROOT}/logs/",
          "additionalProperties": false,
          "properties": {
            "dir_path": {
              "type": "string",
              "default": "logs",
              "description": "Diretório para salvar os logs"
            },
            "save_json": {
              "type": "boolean",
              "default": true,
              "description": "Salvar arquivo em formato JSON"
            },
            "save_html": {
              "type": "boolean",
              "default": false,
              "description": "Salvar arquivo em formato HTML"
            }
          }
        },
        "cors": {
          "type": ["string", "null"],
          "description": ""
        },
        "autoload": {
          "type": "boolean",
          "description": "Utilizar autoload para as classes do projeto."
        },
        "console_url": {
          "type": "string",
          "description": "",
          "format": "uri"
        }
      }
    },
    "data": {
      "type": "object",
      "description": ""
    },
    "dbs": {
      "type": "object",
      "description": ""
    },
    "map": {
      "$ref": "#/definitions/map_list"
    }
  },
  "definitions": {
    "db_list": {
      "type": "object",
      "description": "",
      "additionalProperties": true
    },
    "db": {

    },
    "map_list": {
      "type": "object",
      "description": "",
      "additionalProperties": {
        "minProperties": 1,
        "$ref": "#/definitions/map",
        "oneOf": [
          {
            "properties": {
              "main": {
                "type": "boolean",
                "enum": [true]
              }
            },
            "required": ["main"]
          }
        ]
      }
    },
    "map": {
      "additionalProperties": true,
      "required": [
        "class"
      ],
      "properties": {
        "class": {
          "type": "string",
          "description": ""
        },
        "main": {
          "type": "boolean",
          "enum": [false]
        },
        "sub": {
          "$ref": "#/definitions/map_list"
        }
      }
    }
  }
}