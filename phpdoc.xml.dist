<phpdocumentor>
    <title>Blazar Doc</title>
    <parser>
        <encoding>utf-8</encoding>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <logging>
        <level>warn</level>
        <paths>
            <default>logs/{DATE}.log</default>
            <errors>logs/{DATE}.errors.log</errors>
        </paths>
    </logging>
    <transformations>
        <template name="clean"/>
    </transformations>
    <files>
        <directory>src</directory>
        <file>bootstrap.php</file>
    </files>
</phpdocumentor>