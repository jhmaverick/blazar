{
  "name": "jhmaverick/blazar",
  "description": "Framework para desenvolvimento de aplicações PHP.",
  "keywords": [
    "framework"
  ],
  "homepage": "https://github.com/jhmaverick/blazar",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "João Henrique",
      "email": "joao_henriquee@outlook.com"
    }
  ],
  "bin": ["src/Blazar/Component/Cli/bin/blazar-cmd"],
  "config": {
    "optimize-autoloader": true,
    "process-timeout": 0
  },
  "require": {
    "php": "^7.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-mbstring": "*",
    "ext-gd": "*",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-ctype": "*",
    "ext-zip": "*",
    "ext-posix": "*",
    "ext-intl": "*",
    "mustache/mustache": "^2.12",
    "brightnucleus/mime-types": "^0.2.0",
    "rmccue/requests": ">=1.0",
    "colinodell/json5": "^2.0",
    "vlucas/phpdotenv": "^3.3",
    "justinrainbow/json-schema": "^5.2",
    "monolog/monolog": "^1.25.2",
    "graylog2/gelf-php": "^1.6",
    "maxbanton/cwh": "^1.1.13",
    "symfony/translation": "^5.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14",
    "phpunit/phpunit": "^8.0"
  },
  "autoload": {
    "psr-0": {
      "": "src/"
    },
    "files": [
      "bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "BlazarDev\\": "dev-project/BlazarDev/"
    }
  },
  "scripts": {
    "check-style": "php-cs-fixer fix --diff --dry-run",
    "fix-style": "php-cs-fixer fix"
  }
}
